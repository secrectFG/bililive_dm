<ContentDialog
    x:Class="Bililive_dm_UWPViewer.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"

    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignHeight="133.333" d:DesignWidth="206.333">

    <StackPanel>
        <CheckBox IsChecked="{Binding Path=HideWhenTrans, Mode=TwoWay}" Content="穿透模式下弹幕渐隐" />
        <StackPanel HorizontalAlignment="Center">
            <Button Content="确定" Click="ButtonBase_OnClick" />
        </StackPanel>

    </StackPanel>
</ContentDialog>